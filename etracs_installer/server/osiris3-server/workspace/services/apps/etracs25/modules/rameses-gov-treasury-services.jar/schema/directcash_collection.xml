<schema>
	<element name="directcash_collection" tablename="directcash_collection" >
		<field name="objid" primary="true" />
		<field name="state" required="true" />
		<field name="payee" required="true" />
		<field name="refdate" required="true" />
		<field name="refno" required="true" />
		<field name="amount" required="true" type="decimal" />
		<field name="remarks"  />
